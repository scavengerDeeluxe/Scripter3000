<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

      <Style TargetType="DataGrid">
    <Setter Property="Background" Value="#1A1A1A"/>
    <Setter Property="Foreground" Value="#DDDDDD"/>
    <Setter Property="GridLinesVisibility" Value="All"/>
    <Setter Property="HorizontalGridLinesBrush" Value="#333333"/>
    <Setter Property="VerticalGridLinesBrush" Value="#333333"/>
    <Setter Property="BorderBrush" Value="#00FFFF"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="RowBackground" Value="#222222"/>
    <Setter Property="AlternatingRowBackground" Value="#2A2A2A"/>
    <Setter Property="SelectionMode" Value="Single"/>
    <Setter Property="SelectionUnit" Value="FullRow"/>
    <Setter Property="CanUserAddRows" Value="False"/>
    <Setter Property="CanUserDeleteRows" Value="False"/>
    <Setter Property="AutoGenerateColumns" Value="True"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="FontWeight" Value="Normal"/>
    <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
    <Setter Property="SnapsToDevicePixels" Value="True"/>
</Style>

<Style TargetType="DataGridRow">
    <Setter Property="Foreground" Value="#DDDDDD"/>
    <Setter Property="FontWeight" Value="Normal"/>
    <Setter Property="Height" Value="28"/>
    <Setter Property="BorderBrush" Value="#444"/>
    <Setter Property="BorderThickness" Value="0,0,0,1"/>
    <Style.Triggers>
        <Trigger Property="IsSelected" Value="True">
            <Setter Property="Background" Value="#00FFFF"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Trigger>
        <Trigger Property="IsMouseOver" Value="True">
            <Setter Property="Background" Value="#333333"/>
        </Trigger>
    </Style.Triggers>
</Style>

<Style TargetType="DataGridColumnHeader">
    <Setter Property="Background" Value="#111111"/>
    <Setter Property="Foreground" Value="#00FFFF"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="BorderBrush" Value="#00FFFF"/>
    <Setter Property="BorderThickness" Value="0,0,1,1"/>
    <Setter Property="Padding" Value="8,4"/>
</Style>

</ResourceDictionary>
